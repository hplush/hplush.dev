{
  "private": true,
  "scripts": {
    "clean": "del-cli dist/ .cache",
    "spell": "yaspeller *.md dist/**/*.html",
    "lint": "eslint . && stylelint src/**/*.sss",
    "build": "NODE_ENV=production node --experimental-json-modules ./scripts/build.js",
    "start": "parcel serve src/index.pug --open",
    "test": "yarn lint && yarn build && size-limit && yarn spell"
  },
  "license": "MIT",
  "repository": "hplush/hplu.sh",
  "type": "module",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "autoprefixer": "^10.0.2",
    "del": "^6.0.0",
    "parcel": "^2.0.0-nightly.420",
    "postcss": "^8.1.10",
    "postcss-hexrgba": "^2.0.1",
    "postcss-media-minmax": "^4.0.0",
    "postcss-nested": "^5.0.1",
    "postcss-pxtorem": "^5.1.1",
    "pug": "^3.0.0",
    "ssdeploy": "^0.6.17",
    "sugarss": "^3.0.3"
  },
  "browserslist": [
    "last 2 versions",
    "firefox esr",
    "not dead",
    "not ie 11",
    "not ie_mob 11",
    "not op_mini all",
    "not op_mob > 0",
    "not and_qq > 0",
    "not android > 0"
  ],
  "devDependencies": {
    "@logux/eslint-config": "^42.2.3",
    "@logux/stylelint-config": "^0.1.3",
    "@size-limit/file": "^4.9.0",
    "del-cli": "^3.0.1",
    "eslint": "^7.14.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-es5": "^1.5.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-let": "^1.1.0",
    "eslint-plugin-prettierx": "^0.14.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-unicorn": "^23.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.2",
    "size-limit": "^4.9.0",
    "stylelint": "^13.8.0",
    "stylelint-config-recess-order": "^2.3.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0",
    "svgo": "^1.3.2",
    "yaspeller": "^7.0.0"
  },
  "postcss": {
    "plugins": {
      "postcss-nested": {},
      "postcss-hexrgba": {},
      "postcss-pxtorem": {
        "propList": [
          "*"
        ],
        "selectorBlackList": [
          "html"
        ],
        "rootValue": 16
      },
      "postcss-media-minmax": {},
      "autoprefixer": {}
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config"
  },
  "eslintIgnore": [
    "scripts/lib/dirs.js",
    "dist",
    ".cache"
  ],
  "stylelint": {
    "extends": "@logux/stylelint-config"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.svg": "svgo",
    "*.sss": "stylelint --fix",
    "*.md": "yaspeller"
  },
  "size-limit": [
    {
      "path": [
        "dist/index.html",
        "dist/*.woff2",
        "dist/logo.svg"
      ],
      "limit": "41 KB"
    }
  ],
  "yaspeller": {
    "ignoreCapitalization": true,
    "dictionary": [
      "github",
      "hplush",
      "hplushlab",
      "hi@hplu.sh",
      "UI",
      "i18n",
      "a11y",
      "monetization"
    ]
  }
}
